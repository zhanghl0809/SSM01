<?xml version="1.0" encoding="UTF-8" ?>  
<!DOCTYPE mapper  
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"  
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- namespace命名空间，作用就是对sql进行分类化管理，理解sql隔离 注意：使用mapper代理方法开发，namespace有特殊重要的作用 -->
<mapper namespace="com.ssm.dao.UserMapper">
	<select id="findUserById" parameterType="int" resultType="com.ssm.Entity.User">
		SELECT * FROM user WHERE id = #{id}
	</select>
	<select id="findUserByName" parameterType="String" resultType="com.ssm.Entity.User">
		select  id,username,password from user where username=#{username}
	</select>
</mapper>  